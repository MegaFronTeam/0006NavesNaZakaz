mixin topLine()
	// start topLine
	+b.topLine.section#topLine&attributes(attributes)
		.container
			+e.main-row.row
				.col-auto.d-lg-none
					+menu-toggle()
				.col.col-lg-auto.text-center.text-lg-left
					+b.logo(href="/")
						+icon('logo-top')
						//- img(src="img/svg/logo-top.svg", alt="")
				.col-auto.d-lg-none
					+soc().--header
						+e.A.item--whatsapp(href="#" target="_blank")
							+icon('whatsapp')
						+e.A.item--phone-call.link-modal-js(href="#modal-call" data-title= "Обратный звонок" data-text= "Оставьте свой номер телефона, и&nbsp;мы&nbsp;вам перезвоним в&nbsp;течение 15&nbsp;минут." data-btn= "Заказать обратный звонок" data-pic= "2")
							+icon('phone-call')
				.col.d-none.d-lg-block
					.row
						+e.col.col-auto
							+b.locaton-dropdown.dropdown
								+e.btn.dropdown__btn
									+icon('geo-tag')
									span Москва и&nbsp;МО
									+icon('chevron-down')
								+e.content.dropdown__content
									+e.item(href="#") Москва и&nbsp;МО
									+e.item(href="#") Санкт-Петербург и&nbsp;область
									+e.item(href="#") И так далее
									
						.col-sm-auto
							+b.schedule
								span открыто
								span Пн&ndash;Вс &bull; 9:00&ndash;21:00
						.col-auto.d-none.d-md-flex
							+b.label 
								span Строим навесы с&nbsp;2019&nbsp;года
	// end topLine